<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Border Padding="5">
        <Grid Margin="0,0,-64,0">
            <!--Grid  definition -->
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Control -->
            <TextBlock Text="CPU" FontWeight="Bold" VerticalAlignment="Center"/>
            <TextBox Grid.Row="0" Grid.Column="1" Margin="5 0" VerticalAlignment="Center"
               TextChanged="TextBox_TextChanged" Padding="15 4"/>
            <Button Grid.Row="0" Grid.Column="2" Name="btn_CoolDown" Content="Button #3"
                    IsEnabled="False"/>

            <TextBlock Grid.Row="1" Text="Memory:" FontWeight="Bold"
                   VerticalAlignment="Center"/>





        </Grid>
    </Border>
</Window>
